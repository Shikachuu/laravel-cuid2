{
    "name": "shikachuu/laravel-cuid2",
    "license": "MIT",
    "description": "First class support for CUID2 in your Laravel application",
    "type": "library",
    "authors": [
        {
            "name": "Shikachuu",
            "email": "mate@picloud.hu"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "illuminate/support": "^v10",
        "visus/cuid2": "^4.0"
    },
    "require-dev": {
        "doctrine/dbal": "^3.7",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.13",
        "pestphp/pest": "^2.23",
        "pestphp/pest-plugin-laravel": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Shikachuu\\LaravelCuid2\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shikachuu\\LaravelCuid2\\Cuid2ServiceProvider"
            ],
            "aliases": {
                "Cuid2": "Shikachuu\\LaravelCuid2\\Facades\\Cuid2"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "test": "pest",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi"
    }
}
